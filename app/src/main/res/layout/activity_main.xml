        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/poczatkowy" />

    <ImageButton
        android:id="@+id/but4"
        android:layout_width="100dp"
        android:layout_height="100dp"
